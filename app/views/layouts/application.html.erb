<!DOCTYPE html>
<html>
<head>
	<title>AlertiTest</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<% cache ["navbar"] do %>
		<%= nav_bar :fixed => :top, :brand => "Alerti test", :brand_link => articles_path do%>
			<% menu_group do %>
				<%= menu_item "Articles", root_path %>
			<% end %>
		<% end %>
	<% end %>
	<br>
	<br>
	<br>
	<div class="container">
		<div class="row">
			<div class="span12">

				<% if flash[:alert] %>
				<div class="alert alert-error">
					<button type="button" class="close" data-dismiss="alert">×</button>
					<p class="flash-error"><%= flash[:alert] %></p>
				</div>
				<% end %>

				<% if flash[:notice] %>
				<div class="alert alert-info">
					<button type="button" class="close" data-dismiss="alert">×</button>
					<p class="flash-error"><%= flash[:notice] %></p>
				</div>
				<% end %>

				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
