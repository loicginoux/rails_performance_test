<h1>Articles</h1>
<p>Total: <%= @count %></p>
<p><%= link_to 'New Article', new_article_path , :class => "btn btn-primary" %></p>
<div class="row">
<table class="table table-striped span6">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <!-- <th>Content</th> -->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= link_to 'Show', article, :class => "btn btn-primary"  %></td>
      <td><%= link_to 'Admin', admin_article_path(article), :class => "btn"  %></td>
      <td><%= link_to 'Destroy', article, method: :delete, :class => "btn btn-danger" %></td>
    </tr>
<% end %>
</table>

<br />


</div>